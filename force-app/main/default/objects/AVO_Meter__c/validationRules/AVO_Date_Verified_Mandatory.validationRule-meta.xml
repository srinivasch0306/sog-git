<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AVO_Date_Verified_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( AVO_Meter_Verified__c, &quot;Yes&quot; ),
ISBLANK(  AVO_Date_Verified__c )
)</errorConditionFormula>
    <errorDisplayField>AVO_Date_Verified__c</errorDisplayField>
    <errorMessage>Date Verified is mandatory when Meter Verified is Yes.</errorMessage>
</ValidationRule>
