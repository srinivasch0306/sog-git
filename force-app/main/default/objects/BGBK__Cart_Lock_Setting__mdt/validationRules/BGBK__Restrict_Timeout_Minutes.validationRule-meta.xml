<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BGBK__Restrict_Timeout_Minutes</fullName>
    <active>true</active>
    <errorConditionFormula>OR(BGBK__Cart_Timeout_Minutes__c &lt; 1,  BGBK__Cart_Timeout_Minutes__c &gt; 180)</errorConditionFormula>
    <errorDisplayField>BGBK__Cart_Timeout_Minutes__c</errorDisplayField>
    <errorMessage>The cart lock timeout value is invalid. Enter a value between 1 to 180 for the cart lock timeout.</errorMessage>
</ValidationRule>
